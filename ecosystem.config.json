{
  "name": "api-urna-eletronica",
  "version": "1.0.0",
  "main": "src/server.js",
  "apps": [
    {
      "name": "api-urna",
      "script": "src/server.js",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3001
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 3001,
        "LOG_LEVEL": "debug"
      },
      "error_file": "./logs/pm2-error.log",
      "out_file": "./logs/pm2-out.log",
      "log_file": "./logs/pm2-combined.log",
      "time": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "merge_logs": true,
      "max_memory_restart": "500M",
      "restart_delay": 1000,
      "max_restarts": 5,
      "min_uptime": "10s",
      "kill_timeout": 5000,
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs",
        "uploads"
      ]
    }
  ]
}