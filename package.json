{
  "name": "api-urna-eletronica",
  "version": "1.0.0",
  "description": "API REST completa para sistema de urna eletrÃ´nica com monitoramento em tempo real",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "npm install",
    "render-postbuild": "npm run setup",
    "test": "jest",
    "init-db": "node utils/initDatabase.js",
    "seed": "node utils/seedData.js", 
    "setup": "npm run init-db && npm run seed",
    "prod": "NODE_ENV=production npm start",
    "pm2:start": "pm2 start ecosystem.config.json",
    "pm2:stop": "pm2 stop api-urna",
    "pm2:restart": "pm2 restart api-urna",
    "pm2:logs": "pm2 logs api-urna",
    "docker:build": "docker build -t api-urna .",
    "docker:run": "docker run -p 3001:3001 --env-file .env api-urna",
    "docker:compose": "docker-compose up -d"
  },
  "keywords": [
    "urna-eletronica",
    "api",
    "nodejs",
    "express",
    "supabase",
    "votacao",
    "tempo-real"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4",
    "axios": "^1.6.2",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "csv-parser": "^3.0.0",
